{
  "manifest_version": 3,
  "name": "OpenTab",
  "version": "0.1",
  "description": "仿Edge平板端风格的新标签页",
  
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },

  "permissions": [
    "storage",
    "tabs"
  ],

  "action": {
    "default_title": "OpenTab"
  },
  "web_accessible_resources": [
    {
      "resources": ["icon/*"],
      "matches": ["<all_urls>"]
    }
  ]
}